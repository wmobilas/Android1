<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionBarTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:actionBarStyle">@style/TranslucentActionBar</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TranslucentActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.DeviceDefault.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoEditStyle" parent="android:Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoActionStyle" parent="android:Widget.DeviceDefault.ActionBar.Solid">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Violet" parent="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <!--<item name="android:typeface">serif</item>-->
        <item name="android:textStyle">normal</item>
        <item name="android:animation">@style/AnimationActivity</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:itemBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>

        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>


        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Violet.Widget</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:editTextStyle">@style/RobotoEditStyle</item>
        <item name="android:absListViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:alertDialogStyle">@style/RobotoTextViewStyle</item>
        <item name="android:listViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:popupWindowStyle">@style/RobotoTextViewStyle</item>
        <item name="android:scrollViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:spinnerItemStyle">@style/RobotoTextViewStyle</item>
        <item name="android:textSuggestionsWindowStyle">@style/RobotoTextViewStyle</item>


        <item name="android:actionBarItemBackground">@drawable/selectable_background_violet</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Violet</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Violet</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Violet</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Violet</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Violet</item>
        <!--<item name="android:actionModeBackground">@drawable/cab_background_top_violet</item>-->
        <!--<item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_violet</item>-->
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Violet</item>


    </style>

    <style name="ActionBar.Solid.Violet" parent="@android:style/Widget.DeviceDefault.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_violet</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_violet</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_violet</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Violet</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionBar.Transparent.Violet" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@drawable/ab_transparent_violet</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Violet</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Violet.Widget" parent="@android:style/Theme.DeviceDefault">
        <item name="android:popupMenuStyle">@style/PopupMenu.Violet</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Violet</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="PopupMenu.Violet" parent="@android:style/Widget.DeviceDefault.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_violet</item>
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DropDownListView.Violet" parent="@android:style/Widget.DeviceDefault.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_violet</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionBarTabStyle.Violet" parent="@android:style/Widget.DeviceDefault.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_violet</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="DropDownNav.Violet" parent="@android:style/Widget.DeviceDefault.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_violet</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_violet</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_violet</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ProgressBar.Violet" parent="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_violet</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ActionButton.CloseMode.Violet" parent="@android:style/Widget.DeviceDefault.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_violet</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>