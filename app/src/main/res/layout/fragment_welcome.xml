<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <ImageView
        android:src="@drawable/pttr"
        android:scaleType = "centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:alpha="0.8"/>

    <ImageView
        android:src="@drawable/apt"
        android:scaleType = "centerInside"
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:layout_marginBottom="-290dp"
        android:layout_gravity="center_horizontal|bottom"/>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:animateLayoutChanges="true">
        <ImageView
            android:src="@drawable/doge"
            android:layout_width="wrap_content"
            android:layout_height="143dp"
            android:layout_gravity="center_horizontal|bottom"/>
        <TextView
            android:id="@+id/much_like"
            android:text="Wow\nSuch app\nMuch like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/username_login"
            android:inputType="textAutoComplete"
            android:hint="Username"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:background="@drawable/field"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_login"
            android:hint="Password"
            android:layout_marginTop="6dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:background="@drawable/field"/>


        <Button
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_button"
            android:onClick="login"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/nowbutton"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:hapticFeedbackEnabled="true"
            android:visibility="visible"/>

        <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_button"
            android:onClick="registerProfile"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/nowbutton"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:hapticFeedbackEnabled="true"
            android:visibility="gone"/>
        <Button
            android:text="Join now! It`s free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/join_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:hapticFeedbackEnabled="true"
            android:visibility="visible"/>


