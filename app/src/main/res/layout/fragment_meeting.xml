<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="build.agcy.test1.Meetings.MeetingActivity$PlaceholderFragment">
<ImageView
    android:id="@+id/meeting_big_photo"
    android:layout_marginTop="80dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/pin"
    android:layout_width="369dp"
    android:layout_height="236dp" />
<TextView
    android:id="@+id/meeting_description"
    android:layout_below="@+id/photo"
    android:layout_centerHorizontal="true"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<TextView
    android:id="@+id/meeting_creator"
    android:layout_below="@+id/meeting_description"
    android:layout_centerHorizontal="true"
    android:text="byCreator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/meeting_status"
    android:text="loading..."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/meeting_big_photo"
    android:layout_alignLeft="@+id/meeting_creator"
    android:layout_alignStart="@+id/meeting_creator"
    android:layout_marginTop="66dp" />
</RelativeLayout>

