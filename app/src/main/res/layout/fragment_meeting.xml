<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="build.agcy.test1.Meetings.MeetingActivity$PlaceholderFragment"
    android:gravity="center_horizontal"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/map"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="map"
                android:background="@drawable/bottomline" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bottomline"
                android:background="@drawable/bottomline"
                android:layout_width="match_parent"
                android:layout_below="@+id/image"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_below="@+id/image"
                android:layout_centerHorizontal="true"
                android:id="@+id/relativeLayout">

                <ImageView
                    android:src="@drawable/ap_l"
                    android:alpha="0.3"
                    android:scaleType="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_container"
                    android:id="@+id/imageView3" />

                <LinearLayout
                    android:id="@+id/user_container"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:layout_below="@+id/description"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:text="by username"
                        android:textColor="@color/violet_dark"
                        android:layout_gravity="center"
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/description"
                        android:layout_centerHorizontal="true" />

                    <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/user_photo"
                        android:src="@drawable/doge"
                        android:visibility="gone"
                        android:scaleType="centerCrop"
                        app:corner_radius="25dp"
                        app:border_width="1dip"
                        app:border_color="#40555555"
                        app:mutate_background="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:oval="true" />
                </LinearLayout>

                <TextView
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="8dp"
                    android:id="@+id/description"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Description"
                    android:textColor="@color/violet_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/bottomline2"
                    android:background="@drawable/bottomline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/imageView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <FrameLayout
                    android:id="@+id/action_container"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottomline2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <ProgressBar
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

</RelativeLayout>

