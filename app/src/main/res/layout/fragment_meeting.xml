<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="build.agcy.test1.Meetings.MeetingActivity$PlaceholderFragment"
    android:gravity="center_horizontal"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal|bottom">

        <RelativeLayout
            android:gravity="center"
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@color/white"
                android:alpha="0.9"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/user_container"
                android:id="@+id/imageView3" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/user_container"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:layout_below="@+id/description"
                android:layout_centerHorizontal="true">

                <TextView
                    android:text="by username"
                    android:textColor="@color/violet_dark"
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:gravity="center_horizontal|bottom" />

                <com.makeramen.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/user_photo"
                    android:src="@drawable/doge"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    app:corner_radius="25dp"
                    app:border_width="1dip"
                    app:border_color="#40555555"
                    app:mutate_background="true"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:oval="true" />
            </LinearLayout>

            <TextView
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="8dp"
                android:id="@+id/description"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Description"
                android:textColor="@color/violet_dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="center_horizontal|bottom" />

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/bottomline2"
                android:background="@drawable/bottomline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/imageView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:id="@+id/content_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/bottomline"
                        android:background="@drawable/bottomline"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/loading"
                android:visibility="visible"
                android:background="@color/grey_default">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </RelativeLayout>

        <build.agcy.test1.Core.Helpers.CustomImageView
            android:id="@+id/image"
            android:src="@color/white"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout"
            android:visibility="invisible" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/action_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom" />
</RelativeLayout>