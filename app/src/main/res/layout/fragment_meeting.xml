<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="build.agcy.test1.Meetings.MeetingActivity$PlaceholderFragment"
    android:layout_marginTop="48dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:orientation="vertical">
<ImageView
    android:id="@+id/meeting_big_photo"
    android:src="@drawable/pin"
    android:layout_width="match_parent"
    android:layout_height="236dp"
    android:layout_gravity="top" />
<TextView
    android:id="@+id/meeting_description"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Description"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />
<TextView
    android:id="@+id/meeting_creator"
    android:text="by Creator"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" />

<TextView
    android:id="@+id/meeting_status"
    android:text="loading..."
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Meetings"
        android:id="@+id/button"
        android:onClick="showMeetings"
        android:layout_marginTop="16dp"
        android:background="@drawable/field"
        /></LinearLayout>
</LinearLayout>

